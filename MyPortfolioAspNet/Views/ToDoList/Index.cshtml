@model List<ToDoList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">To Do</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">To Do List</div>
                    </div>
                    <div class="card-body">                       
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;    
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.Id" class="btn btn-dark">Not Done</a></td>

                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.Id" class="btn btn-info">Done</a></td>
                                        }
                                        <td><a href="/ToDoList/DeleteToDoList/@item.Id" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/ToDoList/UpdateToDoList/@item.Id" class="btn btn-success">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Create To Do</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



