@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Experiences</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Experience</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Id"/>
                            <label>Company</label>
                            <input type="text" asp-for="Head" class="form-control" />
                            <br />
                            <label>Position</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Date</label>
                            <input type="text" asp-for="Date" class="form-control" />
                            <br />
                            <label>Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <br />
                            <button class="btn btn-warning">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

